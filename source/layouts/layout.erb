<!doctype html>
<html prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <meta property="og:title" content="<%= current_page.data.title %>">
    <meta property="og:type" content="article">
    <meta property="og:image" content="<%= data.site.url %><%= image_path(current_page.data.og_image) %>">
    <meta property="og:url" content="<%= data.site.url %><%= current_page.url %>">
    <meta property="description" content="<%= current_page.data.description %>">
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <div id="fb-root"></div>
      <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.9&appId=1891646957752073";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script> <body>
    <%= yield %>
  </body>
</html>
